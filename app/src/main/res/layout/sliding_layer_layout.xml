<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sliding_layer_progress_bar"
        android:visibility="invisible"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/doctor_name"
        android:layout_width="match_parent"
        android:text="Doctor name"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/doctor_address"
        android:text="Doctors address"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        >
        <TextView
            android:id="@+id/token_count"
            android:layout_width="match_parent"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="23/50"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/token_text"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="tokens available"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Get Token"
        android:id="@+id/get_token"
        android:layout_gravity="center"
        />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_token_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/token_status"
        android:text=""
        />
    </LinearLayout>
</LinearLayout>